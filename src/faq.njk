{% extends "layouts/base.njk" %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="/assets/css/faq.css">
{% endblock %}

{% block content %}
<div class="hero">
	<!-- Hero card content -->
	<div class="hero-card">
		<h1 class="display-5 fw-bold mb-1">
			FAQs<br>
		</h1>

		<p class="fs-5 text-light mb-3" style="">
			Here is a little more about how we operate. Got a more specific question? Feel free to get in
			touch.
		</p>
		<div>
			<a href="" class="btn btn-dark w-50 hero-btn">
				<span class="me-2 px-1">GIVE US A CALL</span>
				<img src="https://cdn.prod.website-files.com/6616b1af6b1a369ac15900ff/6616e9a80310eee50e4e4f58_ChevronRight.svg"
					alt="">
			</a>
		</div>
	</div>
</div>


<section id="faq" class="faq-section py-5">
	<div class="container">
		<h2 class="mb-4 faq-heading text-center"></h2>
		<div class="accordion" id="faqAccordion">

			<!-- FAQ Item 1 -->
			<div class="accordion-item">
				<h2 class="accordion-header" id="faqHeadingOne">
					<button class="accordion-button collapsed" type="button"
						data-bs-toggle="collapse" data-bs-target="#faqCollapseOne"
						aria-expanded="false" aria-controls="faqCollapseOne">
						What is your refund policy?
						<svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="16"
							height="16" viewBox="0 0 16 16" fill="currentColor">
							<path d="M6 4l4 4-4 4z" />
					</button>
				</h2>
				<div id="faqCollapseOne" class="accordion-collapse collapse"
					aria-labelledby="faqHeadingOne" data-bs-parent="#faqAccordion">
					<div class="accordion-body">
						We offer a 30-day money-back guarantee on all plans. If you’re not
						satisfied for any reason, just contact support and we’ll refund your
						purchase in full.
					</div>
				</div>
			</div>

			<!-- FAQ Item 2 -->
			<div class="accordion-item">
				<h2 class="accordion-header" id="faqHeadingTwo">
					<button class="accordion-button collapsed" type="button"
						data-bs-toggle="collapse" data-bs-target="#faqCollapseTwo"
						aria-expanded="false" aria-controls="faqCollapseTwo">
						How do I change my password?
						<svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="16"
							height="16" viewBox="0 0 16 16" fill="currentColor">
							<path d="M6 4l4 4-4 4z" />
					</button>
				</h2>
				<div id="faqCollapseTwo" class="accordion-collapse collapse"
					aria-labelledby="faqHeadingTwo" data-bs-parent="#faqAccordion">
					<div class="accordion-body">
						Go to your account settings, click “Security,” then “Change Password.”
						You’ll need your current password and must choose a new one that’s at
						least 8 characters long.
					</div>
				</div>
			</div>

			<!-- FAQ Item 3 -->
			<div class="accordion-item">
				<h2 class="accordion-header" id="faqHeadingThree">
					<button class="accordion-button collapsed" type="button"
						data-bs-toggle="collapse" data-bs-target="#faqCollapseThree"
						aria-expanded="false" aria-controls="faqCollapseThree">
						Do you offer customer support?
						<svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="16"
							height="16" viewBox="0 0 16 16" fill="currentColor">
							<path d="M6 4l4 4-4 4z" />
					</button>
				</h2>
				<div id="faqCollapseThree" class="accordion-collapse collapse"
					aria-labelledby="faqHeadingThree" data-bs-parent="#faqAccordion">
					<div class="accordion-body">
						Yes! Our support team is available 24/7 via email and live chat. We aim
						to respond to every inquiry within 2 hours.
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


{% endblock %}

{% block scripts %}
{{ super() }}
<script src="/assets/js/faq.js"></script>
{% endblock %}
