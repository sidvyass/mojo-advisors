{% extends "layouts/base.njk" %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
<link rel="stylesheet" href="/assets/css/home.css">
{% endblock %}

{% block content %}


<div class="hero d-flex align-items-center">
	<div class="container">
		<div class="row justify-content-start">
			<div class="col-12 col-md-8 col-lg-6 hero-card text-center text-md-start">
				<h1 class="display-5 fw-bold mb-3">
					Financial Growth and Stability
				</h1>
				<p class="fs-5 text-light mb-4">
					We act swiftly and strategically, leveraging
					sharp judgment and disciplined execution to seize fleeting opportunities
					that others may miss or lack the expertise to pursue.
				</p>
				<a href="#" class="btn btn-dark hero-btn px-4 py-2">
					SCHEDULE A FREE MEETING
					<img src="…/ChevronRight.svg" alt="" class="ms-2" />
				</a>
			</div>
		</div>
	</div>
</div>


<section class="bg-dark p-5 text-center">
	<div class="container">
		<h3 class="text-white mb-4">A FEW COMPANIES WE HAVE WORKED WITH</h3>

		<!-- Swiper -->
		<div class="swiper my-logos-swiper">
			<div class="swiper-wrapper">
				{% set logos = [
				"/assets/logos/subway.png",
				"/assets/logos/bis_america_advis.png",
				"/assets/logos/oceanclub.png",
				"/assets/logos/cms.png",
				"/assets/logos/sinai.png"
				] %}
				{% for logo in logos %}
				<div class="swiper-slide d-flex justify-content-center">
					<img src="{{ logo }}" alt="Client Logo" class="company-logo" />
				</div>
				{% endfor %}
			</div>
			<!-- Arrows -->
			<div class="swiper-button-prev"></div>
			<div class="swiper-button-next"></div>
		</div>
	</div>
</section>

<section class="py-5 g-sec">
	<div class="container">
		<!-- Section title, always centered -->
		<div class="text-center mb-5">
			<h2 class="fw-bold services-heading">
				Expert Guidance so you can focus on growth
			</h2>
		</div>

		<!-- Service points: 1-col on xs, 2-col on md+ -->
		<div class="row g-5 justify-content-center">
			<!-- Growth/strategy -->
			<div class="col-12 col-md-6 mb-5 service-point text-center text-md-start">
				<div
					class="d-flex flex-column flex-md-row align-items-center justify-content-center mb-4">
					<img src="/assets/icons/graph-up.svg" alt="Growth"
						class="svg-icon me-0 me-md-2 mb-2 mb-md-0">
					<h5 class="fw-light mb-0">Strategic Growth</h5>
				</div>
				<p class="mb-0">
					We hire CFOs from top investment banks, PE & VC firms, and consulting firms to
					ensure that you are paired with
					someone that understands your business and is well-versed in the support you are
					looking for.
				</p>
			</div>

			<!-- Forecasting/modeling -->
			<div class="col-12 col-md-6 mb-5 service-point text-center text-md-start">
				<div
					class="d-flex flex-column flex-md-row align-items-center justify-content-center mb-4">
					<img src="/assets/icons/calculator.svg" alt="Forecasting"
						class="svg-icon me-0 me-md-2 mb-2 mb-md-0">
					<h5 class="fw-light mb-0">Financial Modeling</h5>
				</div>
				<p class="mb-0">
					Access insightful forecasts and collaborate on strategic moves, leveraging our
					extensive experience with
					hundreds of companies like yours. We’ll strategize and model the impact of
					various scenarios to help guide
					your business in the right direction.
				</p>
			</div>

			<!-- Cash management -->
			<div class="col-12 col-md-6 mb-5 service-point text-center text-md-start">
				<div
					class="d-flex flex-column flex-md-row align-items-center justify-content-center mb-4">
					<img src="/assets/icons/currency-dollar.svg" alt="Cash"
						class="svg-icon me-0 me-md-2 mb-2 mb-md-0">
					<h5 class="fw-light mb-0">Cash & Liquidity</h5>
				</div>
				<p class="mb-0">
					Need to stretch your cash? We’ve got your back. We’ll help you run a tight
					financial ship by implementing cash
					management strategies and providing a clear, insightful view of your spending to
					maximize your efficiency.
				</p>
			</div>

			<!-- Risk & compliance -->
			<div class="col-12 col-md-6 service-point text-center text-md-start">
				<div
					class="d-flex flex-column flex-md-row align-items-center justify-content-center mb-4">
					<img src="/assets/icons/shield-check.svg" alt="Risk"
						class="svg-icon me-0 me-md-2 mb-2 mb-md-0">
					<h5 class="fw-light mb-0">Risk & Compliance</h5>
				</div>
				<p class="mb-0">
					Elevate your pitch with an experienced CFO, not only to craft a personalized
					financial model, but also to help
					you maximize your valuation. We guide you through the process and help you
					choose the right form of capital so
					you can navigate your fundraise or M&A process confidently.
				</p>
			</div>
		</div>
	</div>
</section>


<section class="container-fluid biz-section">
	<div class="row align-items-stretch g-4">
		<!-- Image on top at xs, left at lg -->
		<div class="col-12 col-lg-6 p-0 biz-img">
			<img src="/assets/images/hero.jpg" alt="Get Business Insights from the Experts"
				class="img-fluid w-100 rounded shadow">
		</div>

		<!-- Text below on xs, right on lg -->
		<div class="col-12 col-lg-6 d-flex align-items-center justify-content-center bg-black text-light p-4">
			<div class="text-center text-lg-start">
				<h2 class="fw-bold mb-3 biz-heading">
					Get Business Insights from the Experts
				</h2>
				<h5 class="mb-4 text-muted">
					Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quos officiis
					voluptatibus quae ipsam saepe aperiam…
				</h5>
				<p class="mb-4 biz-copy">
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Quibusdam id cum
					architecto aliquid illum, ipsum distinctio laborum hic, alias quo…
				</p>
				<a href="/" class="btn btn-dark biz-btn">
					Learn more
				</a>
			</div>
		</div>
	</div>
</section>


