					<div class="col-12 col-md-10 col-lg-8">
						<div class="card bg-light border rounded test-card mx-auto">
							<div
								class="card-body d-flex flex-column justify-content-center align-items-center text-center">
								<p class="fst-italic mb-4">{{ item.text }}</p>
								<h5 class="fw-bold mb-1">{{ item.author }}</h5>
								<p class="text-muted mb-0">{{ item.company }}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>

		<!-- navigation arrows -->
		<div class="swiper-button-prev testimonial-prev"></div>
		<div class="swiper-button-next testimonial-next"></div>
	</div>
</section>

<section class="cta-section text-center py-5 d-flex align-items-center" style="min-height: 60vh">
	<div class="container">
		<h2 class="cta-title text-white fw-bold p-3">
			Ready to take the next step?
		</h2>
		<p class="cta-text text-white mb-4 p-2">
			Schedule a meeting with our Team to discuss how Mojo CFO can support your business’s financial
			growth and stability.
		</p>
		<a href="https://forms.gle/HW7q5Bn8mr4QP6s3A" target="_blank" class="btn btn-primary btn-lg cta-btn">
			Let's Have a Conversation
			<svg class="ms-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 512" width="16"
				height="16" fill="currentColor" aria-hidden="true">
			</svg>
		</a>
	</div>
</section>


{% endblock %}

{% block scripts %}
{{ super() }}
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		new Swiper('.my-logos-swiper', {
			loop: true,
			slidesPerView: 5,
			spaceBetween: 24,
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
			breakpoints: {
				0: {slidesPerView: 1, spaceBetween: 12},
				576: {slidesPerView: 2, spaceBetween: 16},
				768: {slidesPerView: 3, spaceBetween: 20},
				992: {slidesPerView: 4, spaceBetween: 24},
				1200: {slidesPerView: 5, spaceBetween: 24},
			}
		});

		new Swiper('.my-testimonial-swiper', {
			loop: true,
			slidesPerView: 1,
			spaceBetween: 0,
			navigation: {
				nextEl: '.testimonial-next',
				prevEl: '.testimonial-prev',
			},
			// optional: fade effect
			// effect: 'fade',
			// fadeEffect: { crossFade: true },
			// enable swiping on mobile
			simulateTouch: true,
			speed: 600,
		});
	});
</script>

<script src="/assets/js/home.js"></script>
{% endblock %}
